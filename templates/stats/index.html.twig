{% extends 'base.html.twig' %}

{% block title %}Hello StatsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <p>This site holds {{ totalNumberOfCards }} cards.</p>
    <p>The random set on show is:</p>
    <h2>{{ randomSet.name }}</h2>
    <p>It was released on {{ releaseMonth }} {{ releaseDay }}, {{ releaseYear}} and contains {{ randomSet.cards | length }} cards, including:</p>

    {% for card in cards %}
        {% if card.media.1 is defined %}
            <img src={{ card.media.1.path }}>
        {% endif %}
    {% endfor %}
</div>
{% endblock %}
